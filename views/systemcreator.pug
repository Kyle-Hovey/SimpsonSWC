extends layout

block content
  div.col-10.box-style
    div
      h1 Create a System or Faction
    br
    div
      form(role='form', action="/directory/createsystem", method="post", style='max-width: 300px; text-align: left;')
        .form-group
          h4 Name
          input.form-control(type='text', name='name', placeholder='Enter the name of your system or faction.')
          h4 System Overview
          textarea(name='crisis', cols='50', rows='20', placeholder='Describe the crisis taking place in your system or faction...', style='resize : none;')
          h4 Historical Background
          textarea(name='history', cols='50', rows='20', placeholder='Describe the history of the system or faction...', style='resize : none;')
        .form-group
          h4 Patrons
          select.form-control(name='patrons', multiple)
            option(selected='selected', disabled='disabled') Select Patrons for this system...
            if patrons
                for patron in patrons
                  option(value=patron._id) #{patron.name}
            else
              option(disabled='disabled') There are no patrons
            br
          h4 Proxies: Use Ctrl + click to select/deselect
          select.form-control(name='proxies', multiple)
            option(selected='selected', disabled='disabled') Select Proxies for this system...
            if proxies
                for proxy in proxies
                  option(value=proxy._id) #{proxy.name}
            else
              option(disabled='disabled') There are no proxies
            br
          button.btn.btn-default(type='submit') Submit
          |&nbsp
          a(href='/')
            button.btn.btn-primary(type="button") Cancel