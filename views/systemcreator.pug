extends layout

block content
  .container
    .jumbotron
      h1 Create a System or Faction
      br
      form(role='form', action="/directory/createsystem", method="post", style='max-width: 500px; text-align: left;')
        
        .form-group
          
          h4 Name
          input.form-control(type='text', name='name', placeholder='Enter the name of the system or faction.')
          
          h4 Overview
          textarea.form-control(name='overview', cols='50', rows='20', placeholder='General overview of the system or faction...', style='resize : none;')
        
          h4 Historical Background
          textarea.form-control(name='history', cols='50', rows='20', placeholder='Describe the history of the system or faction...', style='resize : none;')
        
        .form-group
          
          h4 Patrons
          
          select.form-control(name='patrons', multiple)
            option(selected='selected', disabled='disabled') Select Patrons for this system...
          
            if patrons
                for patron in patrons
                  option(value=patron._id) #{patron.name}
          
            else
              option(disabled='disabled') There are no patrons
            br
          
          h4 Proxies: Use Ctrl + click to select/deselect
          
          select.form-control(name='proxies', multiple)
            option(selected='selected', disabled='disabled') Select Proxies for this system...
          
            if proxies
                for proxy in proxies
                  option(value=proxy._id) #{proxy.name}
          
            else
              option(disabled='disabled') There are no proxies
            br
          
          br
          button.btn.btn-default(type='submit') Submit
          |&nbsp
          a(href='/')
            button.btn.btn-primary(type="button") Cancel