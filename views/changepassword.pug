extends layout

block content
  .container
      .jumbotron
        h1 Change Password
        br
        form(role='form', action='/changepassword', method='post', style='text-align: left;')
          .formgroup
            label(for='oldpassword') Old Password
            input.form-control(type='password', name='oldpassword', placeholder='Old Password')
            br
            label(for='newpassword') New Password
            input.form-control(type='password', name='newpassword', placeholder='New Password')
            br
          button.btn.btn-default(type='submit') Submit
          |&nbsp
          a(href='/')
            button.btn.btn-primary(type='button') Cancel