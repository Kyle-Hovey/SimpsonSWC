extends layout

block content
  .container.form-style.box-style
    div
      if (!user)
        h1 Welcome to Catonia Online!
        br
        div
          a(href='/login')
            button.btn.btn-primary(type="button") Login
          |&nbsp
          a(href='/register')
            button.btn.btn-primary(type="button") Register
  
      if (user && user.usertype == 'controller')
        h1 Welcome to Catonia Online #{user.firstName}!
        br
        div
          a(href='/cnn')
            button.btn.btn-primary(type="button") Enter